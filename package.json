{
  "name": "serverless-plugin-static",
  "version": "0.0.5",
  "description": "serverless framework plugin to server static files locally",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest --coverage",
    "postinstall": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sashkopavlenko/serverless-plugin-static.git"
  },
  "keywords": [
    "serverless",
    "offline",
    "static"
  ],
  "author": "sashkopavlenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sashkopavlenko/serverless-plugin-static/issues"
  },
  "homepage": "https://github.com/sashkopavlenko/serverless-plugin-static#readme",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.1",
    "@types/serverless": "^1.78.34",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "audit-ci": "^4.1.0",
    "coveralls": "^3.1.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^13.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.5"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist/"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "json",
      "js"
    ],
    "rootDir": "src",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "errorOnDeprecated": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": -1
      }
    }
  }
}
